<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/app_bar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize" android:background="@android:color/white"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:contentInsetStartWithNavigation="0dp" app:contentInsetEnd="0dp"> <ImageView
        android:id="@+id/logo_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start" android:layout_marginStart="16dp"
        android:contentDescription="Logo Dabar"
        android:src="@drawable/ic_dabar_logo" />

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:id="@+id/scroll_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/app_bar"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/titulo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Como funciona o método Dabar?"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#003C3C"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/subtitulo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Aprenda e memorize com sua própria voz, usando a força da narrativa oral — como os antigos mestres hebreus."
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/titulo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/passo1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="1. Resuma com Clareza"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#007070"
                app:layout_constraintTop_toBottomOf="@id/subtitulo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/passo1_texto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Transforme o que você estudou em um resumo falado, com começo, meio e fim.\n→ Pense como se estivesse explicando a matéria para alguém."
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/passo1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/passo2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="2. Grave com Tempo Limitado"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#007070"
                app:layout_constraintTop_toBottomOf="@id/passo1_texto"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/passo2_texto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Grave esse resumo em até 3 minutos.\n→ Isso força você a organizar as ideias e focar no que realmente importa."
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/passo2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/passo3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="3. Ouça. Repita. Absorva."
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#007070"
                app:layout_constraintTop_toBottomOf="@id/passo2_texto"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/passo3_texto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Transforme o que você estudou em um resumo falado, com começo, meio e fim.\n→ Pense como se estivesse explicando a matéria para alguém."
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/passo3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/passo4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="4. Organize seus áudios"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#007070"
                app:layout_constraintTop_toBottomOf="@id/passo3_texto"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/passo4_texto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Grave esse resumo em até 3 minutos.\n→ Isso força você a organizar as ideias e focar no que realmente importa."
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/passo4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/passo5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="5. Revise com Sabedoria"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#007070"
                app:layout_constraintTop_toBottomOf="@id/passo4_texto"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/passo5_texto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Ouça seus resumos antes de dormir, no transporte ou na véspera da prova.\n→ A fala ativa diferentes áreas do cérebro e melhora a retenção."
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/passo5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/significado"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Dabar significa “palavra com propósito”"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#007070"
                app:layout_constraintTop_toBottomOf="@id/passo5_texto"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/significado_texto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Este método é inspirado na tradição oral hebraica, onde o saber era passado com reverência e clareza. Agora, é sua vez de aprender com propósito."
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/significado"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/dicas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Dicas rápidas:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#007070"
                app:layout_constraintTop_toBottomOf="@id/significado_texto"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/dicas_texto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="32dp"
                android:text="Use uma linguagem simples, como se estivesse contando uma história.\nFale em voz alta, com entonação.\nRepita em diferentes dias para fixar melhor.\nUse sons de fundo se quiser tornar a escuta mais agradável."
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/dicas"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#F0EFF5"
        app:itemIconTint="@color/bottom_nav_item_color"
        app:itemTextColor="@color/bottom_nav_item_color"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>